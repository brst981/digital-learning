<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/relative_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorlima">

        <ImageButton
            android:layout_width="25dp"
            android:id="@+id/back"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Feature"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/img_zoom_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_zoom_out"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/img_zoom_out"
            android:layout_toStartOf="@+id/img_zoom_out"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_plus" />

        <ImageButton
            android:id="@+id/img_zoom_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_minus" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_class_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/edt_title"
        android:layout_marginTop="5dp"
        android:padding="5dp">


   <RelativeLayout
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:padding="8dp"
            android:id="@+id/calender"
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:text="Calender"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
            <CheckBox
                android:checked="true"
                android:id="@+id/checkbox1"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp" /></RelativeLayout>
        <View
            android:id="@+id/view_seperator1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel"
            android:background="#CACACA" />
    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_below="@+id/view_seperator1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chat"
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:text="Chat"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
            <CheckBox
                android:checked="true"
                android:id="@+id/checkbox2"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>
        <View
            android:id="@+id/view_seperator2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel1"
            android:background="#CACACA" />
    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_below="@+id/view_seperator2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/grade"
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:text="Grades"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
            <CheckBox
                android:checked="true"
                android:id="@+id/checkbox3"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp" /></RelativeLayout>
        <View
            android:id="@+id/view_seperator3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel2"
            android:background="#CACACA" />

    <RelativeLayout
        android:id="@+id/rel3"
        android:layout_below="@+id/view_seperator3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/stutab"
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:text="Student Tab"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
            <CheckBox
                android:checked="true"
                android:id="@+id/checkbox4"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp" /></RelativeLayout>
        <View
            android:id="@+id/view_seperator4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel3"
            android:background="#CACACA" />
            <Button
                android:id="@+id/buttonSave"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/view_seperator4"
                android:background="@color/colorlima"
                android:elevation="8dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="SAVe"
                android:layout_marginTop="20dp"
                android:textAllCaps="true"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        <TextView
            android:padding="8dp"
            android:layout_width="170dp"
            android:layout_height="15dp"
            android:visibility="invisible"
            android:layout_below="@+id/buttonSave"
            android:text="Calender"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </RelativeLayout>


</LinearLayout>