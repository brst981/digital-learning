<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorlima"
        >
        <RelativeLayout
            android:id="@+id/relback"
            android:layout_width="90dp"
            android:layout_height="70dp">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:scaleType="fitXY"
            android:id="@+id/back"
            android:padding="7dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:text="Back"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_toRightOf="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="@+id/back"
            android:layout_alignParentStart="@+id/back"
            android:layout_marginTop="15dp" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:id="@+id/textView" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_plus"
            android:scaleType="fitXY"
            android:id="@+id/img_zoom_in"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignBottom="@+id/img_zoom_out"
            android:layout_toLeftOf="@+id/img_zoom_out"
            android:layout_toStartOf="@+id/img_zoom_out" />
        <ImageButton
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_minus"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:id="@+id/img_zoom_out"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true" />

        <Button
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="Done"/>


    </RelativeLayout>
    <EditText
        android:id="@+id/desc"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</LinearLayout>