<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollrel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rel"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/question"
                android:hint="Quiz Question"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:padding="5dp"
                android:background="@drawable/edit_text_selector_round"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <CheckBox
                android:id="@+id/check1"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <EditText
                android:hint="Ans 1"
                android:id="@+id/ans1"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/check1"
                android:layout_below="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="60dp" />


            <CheckBox
                android:id="@+id/check2"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/check1"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <EditText
                android:hint="Ans 2"
                android:id="@+id/ans2"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/check2"
                android:layout_below="@+id/check1"
                android:layout_width="match_parent"
                android:layout_height="60dp" />


            <CheckBox
                android:id="@+id/check3"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/check2"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <EditText
                android:hint="Ans 3"
                android:id="@+id/ans3"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/check3"
                android:layout_below="@+id/check2"
                android:layout_width="match_parent"
                android:layout_height="60dp" />



            <CheckBox
                android:id="@+id/check4"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/check3"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <EditText
                android:hint="Ans 4"
                android:id="@+id/ans4"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/check4"
                android:layout_below="@+id/check3"
                android:layout_width="match_parent"
                android:layout_height="60dp" />
            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorlima"
                android:elevation="8dp"
                android:text="Save"
                android:layout_marginTop="15dp"
                android:textAllCaps="true"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_below="@+id/ans4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <CheckBox
                android:layout_marginTop="15dp"
                android:layout_below="@+id/save"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="15dp" />
        </RelativeLayout>

    </ScrollView>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/scrollrel"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/save1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@color/colorlima"
            android:elevation="8dp"
            android:text="Save"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/addmore1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@color/colorlima"
            android:elevation="8dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/save1"
            android:text="Add More"
            android:layout_margin="10dp"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="16sp" />


    </RelativeLayout>
</RelativeLayout>