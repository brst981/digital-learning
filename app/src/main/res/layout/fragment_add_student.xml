<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/txt_header"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="Students"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null"
                android:textSize="18sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edt_first_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_header"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_rectangle_selector"
                android:hint="First Name"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/edt_last_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/edt_first_name"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_rectangle_selector"
                android:hint="Last Name"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/edt_last_name"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_rectangle_selector"

                android:gravity="top|left"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:scrollbars="vertical"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/edt_password"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_rectangle_selector"

                android:gravity="top|left"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:scrollbars="vertical"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

            <com.andexert.library.RippleView
                android:id="@+id/ripple_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/edt_email"

                android:layout_marginTop="10dp"
                app:rv_color="#000"
                app:rv_rippleDuration="50"
                app:rv_type="rectangle"
                app:rv_zoom="true">

                <Button
                    android:id="@+id/button_save"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorlima"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:text="Save"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </com.andexert.library.RippleView>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>