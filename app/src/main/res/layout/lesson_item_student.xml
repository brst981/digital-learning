<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relative_lesson">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <FrameLayout
                android:id="@+id/web_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_margin="5dp">

                <ImageView
                    android:src="@drawable/defaultthumbnail"
                    android:id="@+id/webview_lesson"
                    android:padding="10dp"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center_horizontal|top"></ImageView>
            </FrameLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/web_frame_layout"
                android:layout_marginTop="5dp"
                android:background="@color/color_light_grey" />

            <TextView
                android:id="@+id/textView_lesson_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/view"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
android:text="A"
                android:ellipsize="end"
                android:gravity="left|center"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:textColor="@android:color/black"
                android:textSize="14sp" />


            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView_lesson_title"
                android:layout_marginTop="5dp"
                android:background="@color/color_light_grey" />

            <TextView
                android:id="@+id/textView_lesson_description"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/view1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="B"
                android:ellipsize="end"
                android:gravity="left|center"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView_lesson_description"

                android:background="@color/color_light_grey" />

            <TextView
                android:id="@+id/textView_lesson_description_"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/view2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="C"
                android:ellipsize="end"
                android:gravity="left|center"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView_lesson_description_"

                android:background="@color/color_light_grey" />

            <TextView
                android:id="@+id/textView_lesson_description1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/view3"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="D"
                android:ellipsize="end"
                android:gravity="left|center"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView_lesson_description1"

                android:background="@color/color_light_grey" />

            <TextView
                android:id="@+id/textView_lesson_description2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/view4"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

                android:ellipsize="end"
                android:gravity="left|center"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:textColor="@android:color/black"
                android:textSize="14sp" />


        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/relative_lesson"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_alignParentBottom="true"
        android:background="@color/colorlima">

        <TextView
            android:id="@+id/textView_lesson_count"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="safkdsfk"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_left_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="visible"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_left_arrow"/>

        <ImageView
            android:id="@+id/img_right_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="visible"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</RelativeLayout>