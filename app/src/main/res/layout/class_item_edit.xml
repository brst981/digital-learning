<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#66ddff00"
        android:tag="Bottom1">

        <TextView
            android:id="@+id/editbutton"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:clickable="true"
            android:gravity="center"
            android:text="Edit"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:visibility="gone"
            android:textColor="#fff"
            android:background="@drawable/red_selector"
            android:gravity="center"
            android:text="Delete" />
    </LinearLayout>

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linear_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_class_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:layout_toEndOf="@+id/img_main"
                android:layout_toRightOf="@+id/img_main"
                android:gravity="center_vertical"
                android:text="Class:"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:layout_toEndOf="@+id/text_class_heading"
                android:layout_toRightOf="@+id/text_class_heading"
                android:gravity="center_vertical"
                android:text="Class:"

                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_subject"
            android:layout_below="@+id/linear_class"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_class_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:layout_toEndOf="@+id/img_main"
                android:layout_toRightOf="@+id/img_main"
                android:gravity="center_vertical"
                android:text="Subject:"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_subject_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:layout_toEndOf="@+id/text_class_heading"
                android:layout_toRightOf="@+id/text_class_heading"
                android:gravity="center_vertical"
                android:text="Class:"

                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_student"
            android:layout_below="@+id/linear_subject"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_class_studen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:layout_toEndOf="@+id/img_main"
                android:layout_toRightOf="@+id/img_main"
                android:gravity="center_vertical"
                android:text="Students(s):"
                android:textStyle="italic"
                android:textColor="@color/color_light_grey"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_studen_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:layout_toEndOf="@+id/text_class_heading"
                android:layout_toRightOf="@+id/text_class_heading"
                android:gravity="center_vertical"
                android:text="Class:"

                android:textColor="@color/color_light_grey"
                android:textSize="16sp" />
        </LinearLayout>


    </RelativeLayout>

</com.daimajia.swipe.SwipeLayout>