<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relative_lesson">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/relquiz"
                android:background="#F4F4F4"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <TextView
                    android:text="new Quiz"
                    android:id="@+id/textquiz"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:id="@+id/timer"
                    android:textColor="#ff0000"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="23dp"
                    android:layout_toRightOf="@+id/textquiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="new Quiz"
                    android:id="@+id/txtdes"
                    android:textColor="#000"
                    android:layout_below="@+id/textquiz"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"

                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt"
                android:textColor="#000"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/edit_text_selector_round"
                android:layout_below="@+id/relquiz"
                android:layout_width="match_parent"
                android:layout_height="200dp" />


            <View

                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txt"
                android:layout_marginTop="5dp"
                android:background="@color/color_light_grey" />

            <RelativeLayout
                android:id="@+id/reltimer"
                android:layout_below="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <CheckBox
                android:layout_marginLeft="5dp"
                android:id="@+id/check1"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/option1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/check1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="A"
                android:ellipsize="end"
                android:gravity="left|center"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:textColor="@android:color/black"
                android:textSize="14sp" />


            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_below="@+id/option1"
                android:layout_marginTop="5dp"
                android:background="@color/color_light_grey" />
            <CheckBox
                android:layout_marginLeft="5dp"
                android:id="@+id/check2"
                android:layout_marginTop="7dp"
                android:layout_below="@+id/check1"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/option2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/check2"
                android:layout_below="@+id/view1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="B"
                android:ellipsize="end"
                android:gravity="left|center"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/option2"

                android:background="@color/color_light_grey" />
            <CheckBox
                android:layout_marginLeft="5dp"
                android:id="@+id/check3"
                android:layout_marginTop="7dp"
                android:layout_below="@+id/check2"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/option3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/view2"
                android:layout_toRightOf="@+id/check3"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="C"
                android:ellipsize="end"
                android:gravity="left|center"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/option3"

                android:background="@color/color_light_grey" />

            <CheckBox
                android:layout_marginLeft="5dp"
                android:id="@+id/check4"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/check3"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/option4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/view3"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="D"
                android:layout_toRightOf="@+id/check4"
                android:ellipsize="end"
                android:gravity="left|center"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/option4"
                android:background="@color/color_light_grey" />

            <TextView
                android:id="@+id/textView_lesson_description2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/view4"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:gravity="left|center"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:textColor="@android:color/black"
                android:textSize="14sp" />


        </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorlima">
        <Button
            android:id="@+id/button_create"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorlima"
            android:elevation="8dp"
            android:text="Next"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </RelativeLayout>
</RelativeLayout>